# Server Configuration
HARDWIRE_HOST=http://localhost:8080
HARDWIRE_PORT=8080
HARDWIRE_DATA_DIR=./data

# Database Configuration
HARDWIRE_DB_PATH=./data/db.sqlite
HARDWIRE_DB_MAX_CONNECTIONS=10
HARDWIRE_DB_MIN_CONNECTIONS=2
HARDWIRE_DB_ACQUIRE_TIMEOUT=30

# Authentication Configuration (REQUIRED)
# Generate a secure JWT secret with: openssl rand -base64 32
JWT_SECRET=your-very-long-secure-random-secret-key-here-minimum-32-characters
JWT_EXPIRY_HOURS=24

# Google OAuth Configuration (REQUIRED for admin access)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/admin/auth/google/callback

# Limits Configuration
HARDWIRE_MAX_FILE_SIZE_MB=5120
HARDWIRE_MAX_FILES_PER_SHARE=100
HARDWIRE_RATE_LIMIT_RPM=60
HARDWIRE_FILE_INDEXER_INTERVAL=300

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=hardwire
TOKIO_CONSOLE=false

# Optional: Enable tokio console for debugging
# TOKIO_CONSOLE=true
